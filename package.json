{
	"name": "snippets",
	"displayName": "Snippets",
	"description": "Manage your code snippets via collections without quitting your editor.",
	"version": "0.0.1",
	"preview": true,
	"license": "SEE LICENSE IN LICENSE.txt",
	"publisher": "tahabasri",
	"author": {
		"name": "Taha BASRI"
	},
	"icon": "images/logo.png",
	"homepage": "https://github.com/tahabasri/snippets/blob/main/README.md",
	"repository": {
		"type": "git",
		"url": "https://github.com/tahabasri/snippets.git"
	},
	"bugs": {
		"url": "https://github.com/tahabasri/snippets/issues"
	},
	"engines": {
		"vscode": "^1.51.0"
	},
	"categories": [
		"Snippets",
		"Other"
	],
	"keywords": [
		"Snippets",
		"Snippet",
		"Collections",
		"Collection",
		"Bookmarks",
		"Bookmark"
	],
	"activationEvents": [
		"onCommand:snippets.helloWorld",
		"onView:snippetsExplorer"
	],
	"main": "./out/extension.js",
	"contributes": {
		"viewsWelcome": [
			{
				"view": "snippetsExplorer",
				"contents": "In order to use git features, you can open a folder containing a git repository or clone from a URL.\n[Open Folder](command:vscode.openFolder)\n[Clone Repository](command:git.clone)\nTo learn more about how to use git and source control in VS Code [read our docs](https://aka.ms/vscode-scm).",
				"when": "workbenchState == empty"
			}
		],
		"commands": [
			{
				"command": "snippetsExplorer.refreshEntry",
				"title": "Refresh Snippets",
				"category": "Tests",
				"icon": "$(refresh)"
			},
			{
				"command": "snippets.openSnippet",
				"title": "Open Snippet",
				"category": "Snippets"
			},
			{
				"command": "snippetsExplorer.addSnippet",
				"title": "New Snippet",
				"icon": "$(search-new-editor)",
				"category": "Snippets"
			},
			{
				"command": "snippetsExplorer.addSnippetFolder",
				"title": "Add Folder",
				"icon": "$(new-folder)",
				"category": "Snippets"
			},
			{
				"command": "snippetsExplorer.editSnippet",
				"title": "Edit Snippet",
				"icon": "$(edit)",
				"category": "Snippets"
			},
			{
				"command": "snippetsExplorer.deleteSnippet",
				"title": "Delete Snippet",
				"icon": "$(remove)",
				"category": "Snippets"
			},
			{
				"command": "snippetsExplorer.deleteSnippetFolder",
				"title": "Delete Folder",
				"icon": "$(remove)",
				"category": "Snippets"
			}
		],
		"menus": {
			"commandPalette": [
				{
					"command": "snippets.openSnippet",
					"when": "false"
				}
			],
			"view/title": [
				{
					"command": "snippetsExplorer.addSnippet",
					"when": "view == snippetsExplorer",
					"group": "navigation@1"
				},
				{
					"command": "snippetsExplorer.addSnippetFolder",
					"when": "view == snippetsExplorer",
					"group": "navigation@2"
				},
				{
					"command": "snippetsExplorer.refreshEntry",
					"when": "view == snippetsExplorer",
					"group": "navigation@3"
				}
			],
			"view/item/context": [
				{
					"command": "snippetsExplorer.editSnippet",
					"when": "view == snippetsExplorer && viewItem == snippet",
					"group": "inline"
				},
				{
					"command": "snippetsExplorer.deleteSnippet",
					"when": "view == snippetsExplorer && viewItem == snippet",
					"group": "inline"
				},
				{
					"command": "snippets.openSnippet",
					"when": "view == snippetsExplorer && viewItem == snippet",
					"group": "1_snippets@1"
				},
				{
					"command": "snippetsExplorer.addSnippet",
					"when": "view == snippetsExplorer",
					"group": "2_snippetManagement@1"
				},
				{
					"command": "snippetsExplorer.deleteSnippet",
					"when": "view == snippetsExplorer && viewItem == snippet",
					"group": "2_snippetManagement@2"
				},
				{
					"command": "snippetsExplorer.addSnippetFolder",
					"when": "view == snippetsExplorer",
					"group": "3_folderManagement@1"
				},
				{
					"command": "snippetsExplorer.deleteSnippetFolder",
					"when": "view == snippetsExplorer && viewItem == snippetFolder",
					"group": "3_folderManagement@2"
				}
			],
			"editor/context": [
				{
					"command": "snippetsExplorer.addSnippet",
					"when": "editorTextFocus",
					"group": "snippets@1"
				}
			]
		},
		"viewsContainers": {
			"activitybar": [
				{
					"id": "snippets-explorer",
					"title": "Snippets",
					"icon": "resources/icons/logo_w.svg"
				}
			]
		},
		"views": {
			"snippets-explorer": [
				{
					"id": "snippetsExplorer",
					"name": "Snippets Explorer"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.51.0",
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.0",
		"@types/node": "^12.11.7",
		"eslint": "^7.9.0",
		"@typescript-eslint/eslint-plugin": "^4.1.1",
		"@typescript-eslint/parser": "^4.1.1",
		"glob": "^7.1.6",
		"mocha": "^8.1.3",
		"typescript": "^4.0.2",
		"vscode-test": "^1.4.0"
	}
}